<div class="uk-padding">


<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field uk-margin-bottom">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,size:"60" ,class:"uk-padding-small" %>
  </div>

  <div class="field uk-margin-bottom">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" ,size:"60" ,class:"uk-padding-small"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field uk-margin-bottom">
      <%= f.check_box :remember_me %>
      <%= f.label :次回から入力を省略 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" ,class:"uk-button uk-button-default"%>
  </div>
<% end %>

</div>

